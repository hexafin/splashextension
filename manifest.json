{
  "manifest_version": 2,
  "name": "Splash",
  "description": "Pay with your Bitcoin Splash wallet in your browser",
  "version": "0.0.0.1",
  "background": {
    "scripts": ["event.js"],
    "persistent": true
  },
  "icons": {
    "16": "extensionIcon.png"
  },
  "content_scripts": [
    {
      "matches": ["*://*/*"],
      "css": [],
      "js": ["content.js"]
    }
  ],
  "browser_action": {
    "default_title": "RCR Example"
  },
  "web_accessible_resources": ["images/*.png"],
  "permissions": [
    "activeTab",
    "tabs",
    "webRequest",
    "webNavigation",
    "storage",
    "cookies",
    "http://*/*",
    "https://*/*"
  ]
}
